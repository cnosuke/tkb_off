
<%= @user.screen_name %><br />
<%= @user.name %><br />

<%= form_for(@user, :url => {:action => 'create'} ) do |f| %>

<%= f.label :real_name %>
<%= f.text_field :real_name %>

<%= f.label :unit %>
<%= f.text_field :unit %>

<%= f.label :student_num %>
<%= f.text_field :student_num %>

<%= f.label :comment %>
<%= f.text_field :comment %>

<%= f.label :message %>
<%= f.text_field :message %>

<%= f.submit "Submit" %>

<% end %>
